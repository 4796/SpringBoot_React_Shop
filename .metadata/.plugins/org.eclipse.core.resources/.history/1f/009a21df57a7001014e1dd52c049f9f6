package com.example.Shop.converter.impl;

import com.example.Shop.converter.ConverterDtoEntity;
import com.example.Shop.dto.ClientDTO;
import com.example.Shop.dto.OrderDTO;
import com.example.Shop.model.Client;
import com.example.Shop.model.Order;

public class OrderConverterDtoEntity implements ConverterDtoEntity<OrderDTO, Order> {

	@Override
	public OrderDTO toDto(Order e) {
		ClientConverterDtoEntity conv1 = ClientConverterDtoEntity();
		
		return new OrderDTO(e.getId(), e.getClient(), e.getName(), e.getCity(), e.getPhone_number(), e.getToken(), e.getCountry(), e.getPostal_code(), e.getCurrency(), e.getProductsInCart());
	}

	@Override
	public Order toEntity(OrderDTO dto) {
		Client client=new Client(dto.getCountry(), dto.getPostal_code(), dto.getCurrency(), dto.getProductsInCart());
		client.setUsername(dto.getUsername());
		client.setPassword(dto.getPassword());
		client.setName(dto.getName());
		client.setCity(dto.getCity());
		client.setPhone_number(dto.getPhone_number());
		client.setToken(dto.getToken());
		return client;
	}

}